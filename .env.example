# ======================
# ENVIRONMENT VARIABLES TEMPLATE
# ======================
# Copy this file to .env and fill with your actual values
# DO NOT commit .env to version control

# ===============================
# BASIC SERVER CONFIGURATION
# ===============================
PORT=8081
CONTEXT_PATH=
APP_NAME=IACRM-Backend-Instance-1
APP_VERSION=1.0.0
APP_ENVIRONMENT=production

# ===============================
# DATABASE CONFIGURATION
# ===============================
DB_HOST=your-database-host
DB_PORT=5432
DB_NAME=your-database-name
DB_USER=your-database-user
DB_PASSWORD=your-database-password
DB_SSL_MODE=disable
DB_DDL_AUTO=update
# IMPORTANTE: El esquema donde est√°n los stored procedures y funciones
# Ejemplos: iacrm, rinomix, cliente_a, etc.
DB_SCHEMA=your-schema-name
DB_SHOW_SQL=false
DB_FORMAT_SQL=false

# Connection Pool Settings
DB_POOL_MAX_SIZE=10
DB_POOL_MIN_IDLE=2
DB_CONNECTION_TIMEOUT=20000
DB_IDLE_TIMEOUT=300000
DB_LEAK_DETECTION=60000

# ===============================
# SECURITY & AUTHENTICATION
# ===============================
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long
JWT_EXPIRATION=86400000
BOT_API_KEY=your-bot-api-key

# ===============================
# CORS CONFIGURATION
# ===============================
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://another-domain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# ===============================
# OPENAI CONFIGURATION
# ===============================
OPENAI_API_KEY=your-openai-api-key
OPENAI_ASSISTANT_ID=your-openai-assistant-id
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# ===============================
# WEBHOOKS CONFIGURATION
# ===============================
WEBHOOK_MAKE_URL=https://your-make-webhook.com
WEBHOOK_SAVE_CONTACT_URL=https://your-contact-webhook.com
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3

# ===============================
# LOGGING CONFIGURATION
# ===============================
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_SECURITY=WARN
LOG_LEVEL_APP=DEBUG
LOG_PATTERN=%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
LOG_FILE_NAME=logs/iacrm-backend.log

# ===============================
# BUSINESS LOGIC CONFIGURATION
# ===============================
MAX_MESSAGES_PER_USER=100
MESSAGE_TIMEOUT=30
THREAD_CLEANUP_INTERVAL=3600
DEFAULT_USER_CATEGORY=CURIOSO